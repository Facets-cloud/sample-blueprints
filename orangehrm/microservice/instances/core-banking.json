{
  "kind": "microservice",
  "flavor": "standard",
  "version": "1.0",
  "disabled": false,
  "spec": {
    "service_name": "core-banking-api",
    "namespace": "core-banking",
    "replicas": 2,
    "containers": {
      "api": {
        "image": "banking/core-api",
        "tag": "latest",
        "port": 8080,
        "env_vars": {
          "LOG_LEVEL": "info"
        },
        "resources": {
          "requests": {
            "cpu": "200m",
            "memory": "256Mi"
          },
          "limits": {
            "cpu": "500m",
            "memory": "512Mi"
          }
        }
      }
    },
    "service_ports": {
      "http": {
        "port": 80,
        "target_port": 8080,
        "protocol": "TCP"
      }
    },
    "health_checks": {
      "liveness": {
        "path": "/health/liveness",
        "port": 8080,
        "initial_delay_seconds": 15,
        "period_seconds": 20
      },
      "readiness": {
        "path": "/health/readiness",
        "port": 8080,
        "initial_delay_seconds": 5,
        "period_seconds": 10
      }
    },
    "whitelisted_callers": {
      "loan-eligibility": {
        "name": "loan-eligibility-service",
        "path": "/accounts/*",
        "http_methods": {
          "get": true
        }
      },
      "kyc": {
        "name": "kyc-service",
        "path": "/customers/verify",
        "http_methods": {
          "post": true
        }
      },
      "payments": {
        "name": "payments-service",
        "path": "/transactions",
        "http_methods": {
          "get": true,
          "post": true
        }
      }
    }
  }
}