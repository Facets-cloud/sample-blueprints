{
  "$schema": "https://facets-cloud.github.io/schemas/helm/instances/helm.schema",
  "disabled": false,
  "flavor": "helm_simple",
  "spec": {
    "helm": {
      "namespace": "default",
      "repository": "https://charts.retool.com",
      "version": "4.0.0",
      "wait": true,
      "recreate_pods":false,
      "chart": "retool",
      "values": {
        "postgresql": {
          "host": "${postgres.retool-postgress.interfaces.host}",
          "port": "${postgres.retool-postgress.interfaces.port}",
          "user": "${postgres.retool-postgress.interfaces.username}",
          "password": "${postgres.retool-postgress.interfaces.password}",
          "ssl_enabled": false
        }
      }
    },
    "env": []
  }
}